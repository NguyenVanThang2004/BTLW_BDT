@model BTLW_BDT.Models.NhanVien
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid px-2 px-md-4">
    <div class="page-header min-height-300 border-radius-xl mt-4" style="background-image: url('https://images.unsplash.com/photo-1531512073830-ba890ca4eba2?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');">
        <span class="mask bg-gradient-primary opacity-6"></span>
    </div>
    <div class="card card-body mx-3 mx-md-4 mt-n6">
        <div class="row gx-4 mb-2">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                    @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                    {
                        <img src="~/Images/Admin/@Model.AnhDaiDien" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                    }
                    else
                    {
                        <img src="~/Images/Admin/default-avatar.jpg" alt="profile_image" class="w-100 border-radius-lg shadow-sm">
                    }
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5 class="mb-1">@Model.TenNhanVien</h5>
                    <p class="mb-0 font-weight-normal text-sm">@Model.ChucVu</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="row">
                <div class="col-12 col-xl-6">
                    <div class="card card-plain h-100">
                        <div class="card-header pb-0 p-3">
                            <div class="row">
                                <div class="col-md-8 d-flex align-items-center">
                                    <h6 class="mb-0">Thông tin cá nhân</h6>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-3">
                            <ul class="list-group">
                                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Mã nhân viên:</strong> &nbsp; @Model.MaNhanVien</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Tên đăng nhập:</strong> &nbsp; @Model.TenDangNhap</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Ngày sinh:</strong> &nbsp; @(Model.NgaySinh?.ToString("dd/MM/yyyy"))</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Số điện thoại:</strong> &nbsp; @Model.SoDienThoai</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Địa chỉ:</strong> &nbsp; @Model.DiaChi</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Ghi chú:</strong> &nbsp; @Model.GhiChu</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 