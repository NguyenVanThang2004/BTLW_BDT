                                    <input type="text" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Your Email *</label>
                                    <input type="email" class="form-control" id="email">
                                </div>
                                <div class="form-group mb-0">
                                    <input type="submit" value="Leave Your Review" class="btn btn-primary px-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        // Khởi tạo carousel
        var $carousel = $('#product-carousel').carousel({
            interval: false,
            wrap: true
        });

        // Xử lý khi chọn màu
        $('.color-select').change(function() {
            var url = $(this).data('url');
            $.get(url, function(data) {
                $('#imageContainer').html(data);
                // Reset carousel
                $carousel.carousel(0);
            });
        });

        // Xử lý nút prev
        $('.carousel-control-prev').click(function(e) {
            e.preventDefault();
            $carousel.carousel('prev');
        });

        // Xử lý nút next
        $('.carousel-control-next').click(function(e) {
            e.preventDefault();
            $carousel.carousel('next');
        });

        $('.rom-select').change(function() {
            var url = $(this).data('url');
            $.get(url, function(response) {
                if (response.success) {
                    $('#productPrice').text(response.formattedPrice);
                }
            });
        });
    });
</script>

<style>
    .list-group-item {
        transition: all 0.3s ease;
        border-left: 3px solid transparent;
    }
    
    .list-group-item:hover {
        background-color: #f8f9fa;
        border-left: 3px solid #007bff;
        padding-left: 10px !important;
    }

    .carousel-control-prev,
    .carousel-control-next {
        cursor: pointer;
        background: none;
        border: none;
        outline: none;
    }

    .carousel-item {
        transition: transform 0.6s ease-in-out;
    }

    .carousel-inner {
        overflow: hidden;
    }

    /* Kiểm soát kích thước carousel */
    #product-carousel {
        width: 100%;
        height: 0;
        padding-bottom: 100%; /* Tạo container hình vuông */
        position: relative;
    }

    .carousel-inner {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    /* Kiểm soát kích thước và căn chỉnh ảnh */
    .carousel-item {
        height: 100%;
        text-align: center;
        background-color: #fff;
    }

    .carousel-item img {
        max-width: 100%;
        max-height: 100%;
        width: auto;
        height: auto;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        object-fit: contain; /* Giữ tỷ lệ ảnh */
    }

    /* Style cho nút điều khiển */
    .carousel-control-prev,
    .carousel-control-next {
        cursor: pointer;
        background: none;
        border: none;
        outline: none;
        width: 5%;
        z-index: 5;
    }

    .carousel-control-prev {
        left: 0;
    }

    .carousel-control-next {
        right: 0;
    }

    /* Animation cho chuyển ảnh */
    .carousel-item {
        transition: transform 0.6s ease-in-out;
    }

    /* Container cho ảnh */
    .color-group {
        height: 100%;
    }
</style>


