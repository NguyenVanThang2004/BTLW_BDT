@model SanPham
<div class="col-lg-4 col-md-6 col-sm-12 pb-1">
    <div class="card product-item border-0 mb-4">
        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
            <img class="img-fluid w-100" src="@Url.Content("../PhoneImages/Images/" + Model.AnhDaiDien)" alt="@Model.TenSanPham">
        </div>
        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
            <h6 class="text-truncate mb-3">@Model.TenSanPham</h6>
            <div class="d-flex justify-content-center">
                <h6>@Model.DonGiaBanRa</h6>
                <h6 class="text-muted ml-2"><del>@Model.DonGiaBanGoc</del></h6>
            </div>
        </div>
        @if (Model.MaSanPham != null && Model.MaMau != null && Model.MaRom != null)
        {   <a asp-controller="Home" asp-action="ProductDetail"
               asp-route-maSp="@Model.MaSanPham"
               asp-route-maMau="@Model.MaMau"
               asp-route-maRom="@Model.MaRom"
               class="btn btn-sm text-dark p-0">
                <i class="fas fa-eye text-primary mr-1"></i>Xem chi tiết
            </a>}
            <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm vào giỏ hàng</a>
    </div>
</div>

