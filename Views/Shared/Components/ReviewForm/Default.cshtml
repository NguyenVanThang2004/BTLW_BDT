@using BTLW_BDT.ViewModels
@model ReviewViewModel

<div class="review-form-container">
    <h4 class="mb-4">Viết đánh giá</h4>
    @if (Model.RequiresLogin)
    {
        <div class="alert alert-warning">
            Vui lòng đăng nhập để đánh giá sản phẩm
        </div>
    }
    else if (Model.RequiresPurchase)
    {
        <div class="alert alert-info">
            Bạn cần mua sản phẩm này để có thể đánh giá
        </div>
    }
    else
    {
        <form method="post" action="@Url.Action("SaveReview", "Review")">
            @Html.AntiForgeryToken()
            <input type="hidden" name="MaSanPham" value="@Model.MaSanPham" />
            <input type="hidden" id="selectedRate" name="Rate" value="@Model.Rate" />
            <input type="hidden" name="IsEdit" value="@Model.IsEdit" />
            
            <div class="form-group">
                <label>Đánh giá của bạn:</label>
                <div class="star-rating mb-3">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fa fa-star @(i <= Model.Rate ? "checked" : "")" 
                           data-rate="@i"></i>
                    }
                </div>
            </div>

            <div class="form-group">
                <label>Nội dung:</label>
                <textarea class="form-control" name="NoiDung" rows="4">@Model.NoiDung</textarea>
            </div>

            <button type="submit" class="btn btn-primary" name="action" value="@(Model.IsEdit ? "update" : "create")">
                @(Model.IsEdit ? "Cập nhật" : "Gửi đánh giá")
            </button>

            @if (Model.IsEdit)
            {
                <button type="button" class="btn btn-danger ml-2" 
                        onclick="confirmDelete('@Model.MaSanPham')">
                    Xóa đánh giá
                </button>
            }
        </form>
    }
</div> 