@model BTLW_BDT.ViewModels.ReviewFormViewModel

<div class="mb-4">
    <h4>Viết đánh giá của bạn</h4>
    <form id="reviewForm" data-is-update="@(Model.ExistingReview != null)">
        <div class="d-flex my-3">
            <p class="mb-0 mr-2">Đánh giá * :</p>
            <div class="star-rating">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="fa @(Model.ExistingReview?.Rate >= i ? "fas" : "far") fa-star" data-rate="@i"></i>
                }
            </div>
            <input type="hidden" id="selectedRate" value="@(Model.ExistingReview?.Rate ?? 5)" />
        </div>
        <div class="form-group">
            <label for="reviewContent">Nội dung đánh giá *</label>
            <textarea id="reviewContent" class="form-control" rows="5" required>@Model.ExistingReview?.NoiDung</textarea>
        </div>
        <div class="form-group mb-0">
            <button type="submit" class="btn btn-primary px-3">
                @(Model.ExistingReview != null ? "Cập nhật đánh giá" : "Gửi đánh giá")
            </button>
            @if (Model.ExistingReview != null)
            {
                <button type="button" class="btn btn-danger px-3 ml-2" onclick="deleteReview('@Model.MaSanPham')">
                    Xóa đánh giá
                </button>
            }
        </div>
    </form>
</div> 