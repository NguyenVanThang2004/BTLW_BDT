    <script>

        let selectedMethodText = 'Thanh toán tại cửa hàng';
        let selectedIconSrc = '../assets/img/how-pay-icon.png';
        let currentSelectedElement = null; // Theo dõi phần tử đã chọn

        /* Hàm mở modal */
        function openModal() {
          document.getElementById('paymentModal').style.display = 'block';
        }

       /* Hàm đóng modal */
        function closeModal() {
          document.getElementById('paymentModal').style.display = 'none';
        }

        /* Hàm lưu phương thức được chọn và tô màu phần tử đã chọn */
        function selectMethod(method, icon) {
          selectedMethodText = method;
          selectedIconSrc = icon;

          /*  Xóa màu của phần tử trước đó (nếu có) */
          if (currentSelectedElement) {
            currentSelectedElement.classList.remove('selected');
          }

         /*   Gán phần tử được chọn và thêm lớp `selected` */
          event.target.classList.add('selected');
          currentSelectedElement = event.target;
        }

        /*  Hàm xác nhận lựa chọn và cập nhật giao diện chính */
        function confirmSelection() {
          document.getElementById('selectedMethod').textContent = selectedMethodText;
          document.getElementById('selectedIcon').src = selectedIconSrc;
          closeModal();
        }
    </script>
