@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}

@model List<BTLW_BDT.Models.Cart.CartItem>

<div class="row px-xl-5">
    <div class="col-lg-8">
        <div class="mb-4">
            <h4 class="font-weight-semi-bold mb-4">Billing Address</h4>

            <form asp-controller="Checkout" asp-action="ProcessCheckout" method="post">
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Tên Khách Hàng</label>
                        <input class="form-control" type="text"   placeholder="NGUYEN VAN A">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Ngày Sinh</label>
                        <input class="form-control" type="date">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Số Điện Thoại</label>
                        <input class="form-control" type="text" placeholder="+123 456 789">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Địa chỉ</label>
                        <input class="form-control" type="text"  placeholder="So nha 8 , Ngo 79 , Cau Giay , Ha Noi">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Ghi Chú</label>
                        <textarea class="form-control"  placeholder="Ghi chú" rows="4" cols="50"></textarea>
                    </div>
                </div>

                <div class="card-footer border-secondary bg-transparent">
                    <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Place Order</button>
                </div>
                
            </form>

            
        </div>
       
    </div>
    <div class="col-lg-4">
        
        <div class="card border-secondary mb-5">
            <div class="card-header bg-secondary border-0">
                <h4 class="font-weight-semi-bold m-0">Order Total</h4>
            </div>
            <div class="card-body">
                <h5 class="font-weight-medium mb-3">Products</h5>

                @foreach (var item in Model)
                {
                    <div class="d-flex justify-content-between">
                        <p>@item.TenSanPham</p>
                        <p>@Convert.ToDouble(item.TongTien).ToString("N0") VNĐ</p> <!-- Hiển thị tổng tiền của mỗi sản phẩm -->
                    </div>
                }

                <hr class="mt-0">
                <div class="d-flex justify-content-between mb-3 pt-1">
                    <h6 class="font-weight-medium">Subtotal</h6>
                    <h6 class="font-weight-medium">
                 
                        @Convert.ToDouble(Model.Sum(item=>item.TongTien)).ToString("N0") VNĐ<!-- Tính tổng tiền từ giỏ hàng -->
                    </h6>
                </div>
                <div class="d-flex justify-content-between">
                    <h6 class="font-weight-medium">Shipping</h6>
                    <h6 class="font-weight-medium">25,000 VNĐ</h6> <!-- Phí vận chuyển cố định -->
                </div>
            </div>
            <div class="card-footer border-secondary bg-transparent">
                <div class="d-flex justify-content-between mt-2">
                    <h5 class="font-weight-bold">Total</h5>
                    <h5 class="font-weight-bold">
                        @((Model.Sum(item => item.DonGia * item.SoLuong) + 25000).ToString("N0")) VNĐ <!-- Tính tổng tiền cộng phí vận chuyển -->
                    </h5>
                </div>
            </div>
        </div>

       
        <div>
            <div class="payment-info">
                <div class="payment-selection" onclick="openModal()">
                    <img src="../assets/img/how-pay-icon.png" alt="Icon" class="icon" id="selectedIcon">
                    <div class="payment-text">
                        <p id="selectedMethod">Pay at store</p>
                    </div>
                    <span class="change-text">change &gt;</span>
                </div>
            </div>
            <div class="modal" id="paymentModal">
                <div class="modal-content">
                    <span class="close" onclick="closeModal()">&times;</span>
                    <h2>Select Payment Method</h2>
                    <div class="payment-options">
                        <div class="option" onclick="selectMethod('Pay at store', '../assets/img/store-icon.png')">
                            <img src="../assets/img/store-icon.png" alt="Store" class="option-icon">
                            <span>Pay at store</span>
                        </div>
                        <div class="option" onclick="selectMethod('Bank transfer via QR code', '../assets/img/qr-icon.png')">
                            <img src="../assets/img/qr-icon.png" alt="QR Code" class="option-icon">
                            <span>Bank transfer via QR code</span>
                        </div>
                        <div class="option" onclick="selectMethod('VNPAY', '../assets/img/vnpay-icon.png')">
                            <img src="../assets/img/vnpay-icon.png" alt="VNPAY" class="option-icon">
                            <span>VNPAY</span>
                        </div>
                        <div class="option" onclick="selectMethod('Visa/Master/JCB/Napas', '../assets/img/card-icon.png')">
                            <img src="../assets/img/card-icon.png" alt="Card" class="option-icon">
                            <span>Visa/Master/JCB/Napas card</span>
                        </div>
                        <div class="option" onclick="selectMethod('MoMo Wallet', '../assets/img/momo-icon.png')">
                            <img src="../assets/img/momo-icon.png" alt="MoMo" class="option-icon">
                            <span>MoMo Wallet</span>
                        </div>
                        <div class="option" onclick="selectMethod('Kredivo', '../assets/img/kredivo-icon.png')">
                            <img src="../assets/img/kredivo-icon.png" alt="Kredivo" class="option-icon">
                            <span>Kredivo</span>
                        </div>
                    </div>
                    <button class="confirm-btn" onclick="confirmSelection()">Confirm</button>
                </div>
            </div>


        </div>
        <div class="card-footer border-secondary bg-transparent">
            <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3">Place Order</button>
        </div>
    </div>

