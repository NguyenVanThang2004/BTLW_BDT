@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@using X.PagedList.Web.Common
@model X.PagedList.IPagedList<SanPham>

<div class="row">
    @foreach (var item in Model)
    {
        @await Html.PartialAsync("PartialSanPham", item)
    }
</div>

<div class="col-12 pb-1">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mb-3">
            @Html.PagedListPager(
                     Model,
                     page => Url.Action("Shop", new { page = page }),
                     new PagedListRenderOptions
            {
                UlElementClasses = new[] { "pagination" },
                LiElementClasses = new[] { "page-item" },
                PageClasses = new[] { "page-link" },
                ActiveLiElementClass = "active",
                PreviousElementClass = "page-item",
                NextElementClass = "page-item",
                FunctionToDisplayEachPageNumber = pageNumber => pageNumber.ToString(),
                DisplayLinkToPreviousPage = PagedListDisplayMode.IfNeeded,
                DisplayLinkToNextPage = PagedListDisplayMode.IfNeeded
            })
        </ul>
    </nav>
</div>
